extends ../layouts/header.pug

block title
    title= title
block css
    link(rel="stylesheet", href="/css/login.css")

block js
    script(src="/js/login.js" defer)


block bodyContent
    .login_container
        .login_wrapper
            h3.text-secondary Login 
            form(action="/login" method="post")
            
                //- email field
                .username_area 
                    input(type="text" name="email" id="email" placeholder="Username or email" class="form-control login_username" value= user? user.email: '') 
                    i#userIcon(class="fas fa-user-large")
                    if error && error.email
                        p(class="error email_error") #{error.email.msg+"*"}
                    //- password field
                .password_area
                    input(type="password" name="password" id="password" placeholder="Password" class="form-control login_password" value= user && !error.password? user.password: "")
                    i#passIcon(class="fas fa-lock")
                    i#passEyeIcon(class="fas fa-eye")
                if error && error.password
                    p(class="error email_error") #{error.password.msg+"*"}
                //- submit field
                input(type='submit' name="submit" value="Login" id="login" class="form-control my-4" )

                div.login_bottom_link.px-2 
                    p New user? 
                        a(href="/register") Register here
                    p |
                    a(href="/reset-password") Forgot password?


            
    
